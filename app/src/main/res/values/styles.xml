<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#000000</item>
    </style>

    <style name="TopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TopButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/top_button_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/margin_right_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right_left</item>
        <item name="android:backgroundTint">#009688</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MiddleBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/top_margin_buttons</item>
        <item name="android:layout_marginLeft">@dimen/margin_right_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right_left</item>
        <item name="android:backgroundTint">#009688</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_right_left</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/reset_margin_bottom</item>
        <item name="android:backgroundTint">#009688</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
